<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/screen_2"
    android:layout_width="match_parent" android:layout_height="match_parent"

    tools:context="com.fitbase.TokBox.OpenTokActivity">
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen1sub0"
       >

        <RelativeLayout
            android:id="@+id/screen1subscriberAudio0"
            android:layout_width="@dimen/action_bar_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:layout_marginTop="10dp"
            android:visibility="gone">


            <ImageButton
                android:id="@+id/screen1remoteAudio0"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginRight="14.1dp"
                android:background="@drawable/bckg_icon"
                android:src="@drawable/audio"
                />

        </RelativeLayout>
    </RelativeLayout>

     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/screen1sub1"
        android:layout_below="@+id/screen1sub0"
        >

        <RelativeLayout
            android:id="@+id/screen1subscriberAudio1"
            android:layout_width="@dimen/action_bar_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:layout_marginTop="10dp"
            android:visibility="gone">


            <ImageButton
                android:id="@+id/screen1remoteAudio1"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginRight="14.1dp"
                android:background="@drawable/bckg_icon"
                android:src="@drawable/audio"
                />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>