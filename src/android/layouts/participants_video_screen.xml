<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:text="Participants">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentTop="true"
      android:id="@+id/toolbar_participant"
      android:background="@color/pausedVideo"
      android:orientation="horizontal">
    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="left|center_horizontal|center"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/participants_close"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participants"
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/participants_list_name"
      android:layout_below="@+id/toolbar_participant"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
  />
</RelativeLayout>
